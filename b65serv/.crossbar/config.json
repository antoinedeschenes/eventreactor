{
  "controller": {
  },
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "*",
                  "publish": true,
                  "subscribe": true,
                  "call": true,
                  "register": true
                }
              ]
            },
            {
              "name": "manager",
              "permissions": [
                {
                  "uri": "*",
                  "publish": true,
                  "subscribe": true,
                  "call": true,
                  "register": true
                }
              ]
            },
            {
              "name": "provider",
              "permissions": [
                {
                  "uri": "*",
                  "publish": true,
                  "subscribe": true,
                  "call": true,
                  "register": true
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "/": {
              "type": "static",
              "directory": "../web"
            },
            "ws": {
              "type": "websocket",
              "options": {
                "auto_ping_interval": 10000,
                "auto_ping_timeout": 3000
              },
              "auth": {
                "wampcra": {
                  "type": "static",
                  "users": {
                    "manager": {
                      "secret": "secret",
                      "role": "manager"
                    },
                    "provider": {
                      "secret": "secret",
                      "role": "provider"
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  ]
}
